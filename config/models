-- By default this file is used by `persistFileWith` in Model.hs (which is imported by Foundation.hs)
-- Syntax for this file here: https://github.com/yesodweb/persistent/blob/master/docs/Persistent-entity-syntax.md

User
    email Text
    firstName Text Maybe
    lastName Text Maybe
    dueTime UTCTime Maybe
    dueTimeOffset Int Maybe
    lastLogin UTCTime default=CURRENT_TIMESTAMP
    createTime UTCTime default=CURRENT_TIMESTAMP
    UniqueEmail email
    deriving Show

Task
    name Text
    duration Int
    priority Priority
    dueDate Day Maybe
    postponeTime UTCTime Maybe
    repeat RepeatInterval Maybe
    done Bool
    userId UserId
    postponeDay Day Maybe
    createTime UTCTime default=CURRENT_TIMESTAMP
    doneTime UTCTime Maybe
    deleted Bool default=false
    deleteTime UTCTime Maybe
    postponeTimeRepeat Bool default=false
    deriving Show Eq

TaskDependency
    taskId TaskId
    dependsOnTaskId TaskId
    deleted Bool default=false
    TaskDepends taskId dependsOnTaskId
    deriving Show
