.postponed {
    color: lightgrey;
}

.taskCheckbox {
    width: 35px;
}

.taskManagement {
    width: 100px;
    min-width: 100px;
    text-align: center;
    vertical-align: middle;
}

.taskManagement > .manageIcon, .taskDate a:not(.btn) {
    text-decoration: none;
}

.task {
    border-style: solid;
    border-color: darkgray;
    border-width: 1px;
    margin-bottom: -1px;
}

.task a {
    color: darkgray;
}

.task a:hover {
    color: gray;
}

a.unpostpone {
    color: lightgray;
}

.taskInfo {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    word-break: break-word;
}

.taskName {
    padding-right: 5px;
}

.taskDate {
    color: gray;
    text-align: right;
    font-size: 11px;
    white-space: nowrap;
}

.taskDuration {
    font-size: 11px;
    color: gray;
}

.modIcon {
    padding-right: 5px;
}

.manageIcon {
    margin: 5px;
}

.taskList td {
    padding: 10px;
}

.taskList {
    max-width: 600px;
    margin-left:auto;
    margin-right:auto;
    table-layout: fixed;
    width: 100%;
}
